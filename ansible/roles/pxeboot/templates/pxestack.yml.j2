version: "3.3"
services:
  dhcp:
    image: networkboot/dhcpd
    network_mode: host
    deploy:
      replicas: 1
    volumes:
      - type: bind
        source: /data
        target: /data
        volume:
          nocopy: true
  pxe:
    image: nanert/pxeboot
    network_mode: host
    deploy:
      replicas: 1
    volumes:
      - type: bind
        source: /srv
        target: /srva
        volume:
          nocopy: true

  nginx:
    image: networkboot/dhcpd
    ports:
      - "80:80"
    deploy:
      replicas: 1
    volumes:
      - type: bind
        source: /html
        target: /usr/share/nginx/html
        volume:
          nocopy: true


