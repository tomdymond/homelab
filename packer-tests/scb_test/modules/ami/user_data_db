#cloud-config
repo_update: true
repo_upgrade: all

packages:
  - mariadb-server

runcmd:
  - service mariadb start
  - mysql -e "CREATE DATABASE app"
  - mysql -e "CREATE USER 'app' identified by '${database_password}';"
  - mysql -e "GRANT ALL PRIVILEGES ON 'app'.'*' TO 'app'@'%' identified by '${database_password}';"
  - mysqladmin --no-defaults --port=3308 --user=root password '${database_password}'

