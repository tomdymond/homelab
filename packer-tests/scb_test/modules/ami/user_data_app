#cloud-config
repo_update: true
repo_upgrade: all

packages:
  - java-1.8.0-openjdk
  - maven
  - git

users:
  - name: deploy
    gecos: Magic Cloud App Daemon User
    inactive: true
    system: true

write_files:
  - path: "/etc/systemd/system/spring-boot-samples.service"
    permissions: "0644"
    owner: "deploy"
    content: |
      [Unit]
      Description=Deploy Stack Service

      [Service]
      Restart=always
      ExecStart=/bin/bash -c "sed -i 's|jdbc:mysql://localhost:3306|jdbc:mysql://${database_servers}:3306|g;s|spring.datasource.password = root|spring.datasource.password = ${database_password}|g' /opt/spring-boot-samples/spring-boot-mysql-springdatajpa-hibernate/src/main/resources/application.properties; cd /opt/spring-boot-samples/spring-boot-mysql-springdatajpa-hibernate; mvn spring-boot:run"

      [Install]
      WantedBy=default.target

runcmd:
  - cd /opt && git clone https://github.com/netgloo/spring-boot-samples
