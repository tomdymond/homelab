version: '3.3'
services:
  consul:
    network_mode: host
    volumes:
    - type: bind
      source: /etc
      target: /data
    image: tomdymond/mesosphere-bootstrap-discovery:latest
    environment:
    - "CONSUL_SERVER={{ ansible.CONSUL_BOOTSTRAP_NODE }}"
    command:
    - {{ ansible_env.MESOS_BOOTSTRAP }}
    deploy:
      restart_policy:
        condition: on-failure

