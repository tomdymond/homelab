version: '3.3'
services:
  haproxy:
    ports:
    - 80:80/tcp
    volume:
      type: bind
      source: /var/stacks/{{ stack_name }}-stack/haproxy
      dest: /usr/local/etc/haproxy
    image: haproxy
    stdin_open: true
    tty: true
    deploy:
      restart_policy:
        condition: on-failure

