#cloud-config
repo_update: true
repo_upgrade: all

packages:
 - epel-release
 - nginx

write_files:
 - path: "/etc/nginx/nginx.conf"
   owner: "root"
   content: |
     upstream backend {
       server ${app_servers}:8080;
     }

     server {
       location / {
         proxy_pass http://backend;
       }
     }

runcmd:
 - systemd enable nginx
 - systemd start nginx

