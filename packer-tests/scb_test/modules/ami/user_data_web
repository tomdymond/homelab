#cloud-config
repo_update: true
repo_upgrade: all

packages:
 - epel-release

write_files:
 - path: "/etc/nginx/nginx.conf"
   owner: "root"
   content: |
     worker_processes  1;
     events {
       worker_connections  1024;
     }
     http {
       upstream backend {
         server ${app_servers}:8080;
       }
       
       server {
         location / {
           proxy_pass http://backend;
         }
       }
     }

runcmd:
 - yum -y install nginx
 - systemctl enable nginx
 - systemctl start nginx

